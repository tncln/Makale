
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Assets/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/home.css" rel="stylesheet" />
    <link href="~/Assets/Site.css" rel="stylesheet" />
    <script src="~/Assets/Scripts/jquery-1.10.2.min.js"></script>

</head>
<body>
    <div class="site-header card-shadow">
        <h3 style="text-align:center"><a href="/" style="text-decoration:none;  color: #27C4B6;"><i class="fab fa-accusoft"></i> MyStils</a></h3>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        @MvcHtmlString.Create(MYMAKALE.WEB.Controllers.SiteController.html)
                    </ul>
                </div>
                @RenderSection("breadCrumb", required: false)

            </div>
        </nav>
    </div>

    <div class="container">
        @RenderBody()
    </div>
    @*<footer class="panel-footer footer">
            <a href="#" target="_blank">Created By Adem Tunçalın</a>
        </footer>*@
    <div class="well text-muted">
        <div class="row">
            <div class="col-md-12 text-center mt-2 mb-4">
                <h3 class="text-muted">MyStils</h3>
            </div>

            <div class="col-md-4 col-md-offset-4 text-center mb-4">
                <a href="#" target="_blank" class="ml-2 mr-2">
                    <span class="fa fa-facebook-square fa-2x"></span>
                </a>
                <a href="#" target="_blank" class="ml-2 mr-2">
                    <span class="fa fa-twitter-square fa-2x"></span>
                </a>
                <a href="#" target="_blank" class="ml-2 mr-2 text-danger">
                    <span class="fa fa-youtube-play fa-2x"></span>
                </a>
                <a href="#" target="_blank" class="ml-2 mr-2">
                    <span class="fa fa-instagram fa-2x text-danger"></span>
                </a>
            </div>
            <div class="col-md-6 col-md-offset-3 text-center mb-4">
                <p>
                    <a href="mailto:tuncalin@outlook.com" class="btn btn-info btn-sm">
                        <span class="fa fa-at"></span>&nbsp;&nbsp;E-Posta Gönder
                    </a>
                </p>
                <hr>
                <h6>
                    Tüm Hakları Saklıdır.&copy; 2018 Mail: [tuncalin@outlook.com]
                </h6>
            </div>
        </div>
    </div>
    <script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
    @*@Session["pageNumber"]=@Convert.ToInt32(Session["pageNumber"].ToString())+1;*@
    @RenderSection("scripts", required: false)
</body>
</html>
