@using MYMAKALE.UTILITIES.SessionOperations
@{
    if (Session["SessionContext"]==null)
    {
        Response.Redirect("/login");
    }
    var FullName = ((SessionContext)Session["SessionContext"]).FullName;
    var Job = ((SessionContext)Session["SessionContext"]).Job;
    var ImageUrl = ((SessionContext)Session["SessionContext"]).ImageUrl;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Assets/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/Custom/css/Admin.css" rel="stylesheet" />
    <link href="~/Assets/Custom/css/profile.css" rel="stylesheet" />
    <link href="~/Assets/Custom/css/component.css" rel="stylesheet" />
    <link href="~/Assets/Plugins/Toastr/toastr.css" rel="stylesheet" />
    <script src="~/Assets/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>

</head>
<body>


    <div class="admin-content">
        <aside class="sm-side">
            <div class="user-head">
                <div></div>
                <a class="admin-avatar" href="javascript:;">
                    <img style="width:64px; height:60px;" src="@ImageUrl/60/60">
                </a>
                <div class="user-name">
                    <h5><a href="#">@FullName</a></h5>
                    <span><a href="#">@Job</a></span>
                </div>
                <a class="mail-dropdown pull-right" href="/Login/Logout">
                    <i class="fa fa-sign-out" style="font-size:15px; color:#ed5555;"></i>
                </a>
            </div>
            <div class="admin-nav">
                <ul class="admin-nav admin-divider">
                    <li>
                        <a href="/profile"><i class="fa fa-user"></i> Profil</a>
                    </li>
                    <li>
                        <a href="/post"><i class="fa fa-edit"></i> Makale</a>
                    </li>
                    <li>
                        <a href="/category"><i class="fa fa-list-ol"></i> Kategori</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-envelope-o"></i> Sent Mail</a>
                    </li>

                </ul>
                <ul class="nav nav-pills nav-stacked labels-info admin-divider">
                 
                    <li> <a href="/Login/Logout"> <i class=" fa fa-sign-out"></i> Çıkış </a> </li>

                </ul>
            </div>
        </aside>
        <aside class="lg-side">
            <div class="admin-head">
                <a href="javascript:funcOpenCloseMenu()"><i class="fa fa-bars" style="font-size:25px;"></i></a>
                <form action="#" class="pull-right position">
                    <div class="input-append">
                        <input type="text" class="sr-input" placeholder="Search Mail">
                        <button class="btn sr-btn" type="button"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="admin-body">
                @RenderBody()
            </div>
        </aside>
    </div>
    

    <link href="~/Assets/Plugins/CodeMirror/codemirror.min.css" rel="stylesheet" />
    <link href="~/Assets/Plugins/CodeMirror/monokai.min.css" rel="stylesheet" />
    <script src="~/Assets/Plugins/CodeMirror/codemirror.min.js"></script>
    <script src="~/Assets/Plugins/CodeMirror/xml.min.js"></script>
    <script src="~/Assets/Plugins/CodeMirror/formatting.min.js"></script>

    <link href="~/Assets/Plugins/SummerNote/summernote.css" rel="stylesheet" />
    <script src="~/Assets/Plugins/SummerNote/summernote.min.js"></script>

    <script src="~/Assets/Plugins/Toastr/toastr.js"></script>
    <script src="~/Assets/Custom/Js/Utility.js"></script>
    <script>
        funcOpenCloseMenu();
        function funcOpenCloseMenu() {
            if ($(".sm-side")[0].style.display != "none") {
                $(".sm-side").fadeOut();
            } else {
                $(".sm-side").fadeIn();
            }
        }
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
